<!DOCTYPE html>
<html lang="id">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Ollama Chatbot</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
      /* Menambahkan style untuk scrollbar agar lebih ramping */
      ::-webkit-scrollbar {
        width: 8px;
      }
      ::-webkit-scrollbar-track {
        background: #f1f5f9; /* bg-slate-100 */
      }
      ::-webkit-scrollbar-thumb {
        background: #94a3b8; /* bg-slate-400 */
        border-radius: 10px;
      }
      ::-webkit-scrollbar-thumb:hover {
        background: #64748b; /* bg-slate-500 */
      }
    </style>
  </head>
  <body class="bg-slate-100 flex flex-col h-screen font-sans">
    <header class="bg-white border-b border-slate-200">
      <div class="max-w-4xl mx-auto p-4">
        <h1 class="text-xl font-semibold text-center text-slate-800">
          ðŸ¤– Chatbot Ollama (llama3:8b)
        </h1>
      </div>
    </header>

    <div class="flex flex-col flex-1 w-full max-w-4xl mx-auto">
      <main id="chat-container" class="flex-1 p-6 overflow-y-auto">
        <div class="space-y-6">
          <% chatHistory.forEach(msg => { %> <% if (msg.role === 'user') { %>
          <div class="flex justify-end">
            <div
              class="bg-blue-600 text-white rounded-xl p-4 max-w-xl shadow-sm"
            >
              <p class="font-bold text-sm mb-1">You</p>
              <p class="text-base"><%= msg.content %></p>
            </div>
          </div>
          <% } else { %>
          <div class="flex justify-start">
            <div
              class="bg-white text-slate-800 rounded-xl p-4 max-w-xl shadow-sm border border-slate-200"
            >
              <p class="font-bold text-sm mb-1 text-slate-600">AI</p>
              <pre class="text-base whitespace-pre-wrap font-sans">
<%= msg.content %></pre
              >
            </div>
          </div>
          <% } %> <% }) %>
        </div>
      </main>

      <footer class="p-6 bg-slate-100">
        <form
          action="/chat"
          method="POST"
          class="flex items-center gap-3 bg-white border border-slate-300 rounded-xl p-2 shadow-sm focus-within:ring-2 focus-within:ring-blue-500"
        >
          <input
            type="text"
            name="message"
            placeholder="Ketik pesan Anda..."
            class="flex-1 p-2 bg-transparent focus:outline-none"
            required
            autocomplete="off"
            autofocus
          />
          <button
            type="submit"
            class="bg-blue-600 text-white font-bold w-10 h-10 flex items-center justify-center rounded-lg hover:bg-blue-700 transition-colors"
            aria-label="Kirim"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="20"
              height="20"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <path d="M5 12h14" />
              <path d="m12 5 7 7-7 7" />
            </svg>
          </button>
        </form>
      </footer>
    </div>

    <script>
      // Otomatis scroll ke pesan paling bawah
      const chatContainer = document.getElementById("chat-container");
      chatContainer.scrollTop = chatContainer.scrollHeight;
    </script>
  </body>
</html>
